<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/13" xmlns:fx="http://javafx.com/fxml/1"
fx:controller="com.leave.engine.SecondaryController"
alignment="CENTER" spacing="30" styleClass="root" stylesheets="@style.css">

    <padding>
        <Insets top="50" right="50" bottom="50" left="50"/>
    </padding>

    
    <Label fx:id="dialogueLabel" text="Whispers from the void..."
        styleClass="dialogue-text-horror" 
        wrapText="true" minHeight="150" prefWidth="600"
        alignment="TOP_LEFT"/> 
    

    <Button fx:id="nextDialogueButton" text="Venture Forth..."
        styleClass="dialogue-button"
        onAction="#handleNextDialogue"/>

   

</VBox>